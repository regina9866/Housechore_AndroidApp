<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/lightyellow"
        android:text="CHORES "
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"

        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <!--Add 버튼 -->


        <Button
            android:id="@+id/btn_AddChore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ButtonYellow"
            android:text="Add Chore+"
            android:textColor="@color/Tab"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.24"
            android:background="@color/ButtonYellow"
            android:text="Assign to family"
            android:textColor="@color/Tab"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <ListView
        android:id="@+id/chore_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/chore_list_empty"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="32dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="50sp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/no_recipe"
        />

</LinearLayout>